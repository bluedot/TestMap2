<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="TestMap2.MainPage">

    <VerticalStackLayout Spacing="10">
        <Button Text="Move #1" Clicked="Move1_Clicked"/>
        <Button Text="Move #2" Clicked="Move2_Clicked"/>
        <Button Text="Move #3" Clicked="Move3_Clicked"/>
        <Button Text="Add Pin" Clicked="AddPin_Clicked"/>
        <Button Text="Add Circle" Clicked="AddCircle_Clicked"/>
        <maps:Map x:Name="MyMap" WidthRequest="350" HeightRequest="350"/>
    </VerticalStackLayout>

</ContentPage>
